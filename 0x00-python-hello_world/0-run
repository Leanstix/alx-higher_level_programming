#!/bin/bash

# Check if $PYFILE is set
if [ -z "$PYFILE" ]; then
    echo "Error: Environment variable \$PYFILE is not set."
    exit 1
fi

# Check if the specified file exists
if [ ! -f "$PYFILE" ]; then
    echo "Error: File not found - $PYFILE"
    exit 1
fi

# Run the Python script
python "$PYFILE"
